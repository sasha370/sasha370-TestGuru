<%= form_for(:feedback, url: feedbacks_path, locale: true) do |form| %>

  <div>
    <%= form.label :title, t('.title') %>
    <%= form.text_field :title, class: 'form-control', minlength: 5, maxlength: 100  %>
  </div>
  <div>
    <%= form.label :description, t('.description') %>
    <%= form.text_area :description, class: 'form-control', minlength: 5, maxlength: 500 %>
  </div>
  <div>
    <br>
    <%= form.submit t('.send'), class: " btn btn-primary" %>
  </div>
<% end %>
