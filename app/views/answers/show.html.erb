<div class="card">
  <div class="card-header">
    Тест: <%= @answer.question.body %>
  </div>
  <div class="card-body">
    <p id="notice"><%= notice %></p>
    <h3 class="card-text"><%= @answer.body %></h3>
    <p> Correct: <%= answer_correct_label(@answer.correct) %></p>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_answer_path(@answer) %> |
    <%= link_to 'Back', question_path(@answer.question) %>
  </div>
</div>
