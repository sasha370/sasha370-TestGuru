<p id="notice"><%= notice %></p>
<h1> Tests</h1>

<table>
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Level</th>
    <th>Category</th>
    <th>Вопросы</th>
  </tr>
  </thead>

  <tbody>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.id %></td>
      <td><%= link_to "#{test.title}", test_path(test) %>,</td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= link_to 'Вопросы', test_questions_path(test) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
