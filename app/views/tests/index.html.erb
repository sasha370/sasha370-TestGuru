<p id="notice"><%= notice %></p>
<h1 class="text-center"> Тесты </h1>

<table class="table">
  <thead class="bg-primary text-light">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Название</th>
    <th scope="col">Уровень</th>
    <th scope="col">Категория</th>
    <th scope="col">Вопросы</th>
  </tr>
  </thead>
  <tbody>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.id %></td>
      <td><%= link_to "#{test.title}", test_path(test) %></td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= link_to 'Вопросы', test_questions_path(test) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Test', new_test_path, class: 'btn btn-sm btn-primary' %>
