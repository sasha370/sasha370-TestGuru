<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-header">
    <h3>Тест: <%= @test.title %></h3>
  </div>
  <div class="card-body">
    <h4>Уровень: <%= @test.level %></h4>
    <h4>Автор: <%= @test.author.name %></h4>
    <%= render 'questions/question', questions: @questions %>
  </div>
  <div class="card-footer">
    <%= link_to 'Новый вопрос', new_test_question_path(@test) %> |
    <%= link_to 'Назад', tests_path %>
  </div>
</div>
