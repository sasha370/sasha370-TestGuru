<%= form_with(model: [:admin, @question, answer], local: true) do |form| %>
  <%= render 'shared/error', resource: @answer %>

  <div>
    <%= form.label :body, 'Введите текст ответа' %>
    <%= form.text_field :body, placeholder: 'Заполните ...', class: 'form-control' %>
    <br>
    <div class="form-group form-check">
      <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
      <%= form.label :correct, class: 'form-check-label' %>
    </div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>


