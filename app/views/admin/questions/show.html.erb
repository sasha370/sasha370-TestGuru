<div class="card">
  <div class="card-header">
    <h3>  <%= t('activerecord.models.test') %>: <%= @question.test.title %></h3>
  </div>

  <div class="card-body">
    <h3 class="card-text"><%= t('activerecord.models.question') %>: <%= @question.body %></h3>
    <table class="table">
      <thead class="bg-primary text-light">
      <tr>
        <th scope="col"><%= t('helpers.table_col.answers') %></th>
        <th colspan="2" class=" text-center"><%= t('helpers.table_col.action') %></th>
      </tr>
      </thead>
      <tbody>
      <%= render @question.answers %>
      </tbody>
    </table>
    <% if @question.can_create_answer? %>
      <%= link_to t('helpers.submit.create', model: t('activerecord.models.answer')), new_admin_question_answer_path(@question), class: 'btn btn-sm btn-primary' %>
      <br>
      <br>
    <% end %>
    <div class="card-footer">
      <%= link_to t('helpers.links.edit'), edit_admin_question_path(@question), class: 'btn btn-sm btn-primary' %>
      <%= link_to t('helpers.navigation.back'), admin_test_path(@question.test_id), class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>
</div>

