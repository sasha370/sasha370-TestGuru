<div class="card">
  <div class="card-header">
    <h3>Тест: <%= @question.test.title %></h3>
  </div>

  <div class="card-body">
    <h3 class="card-text">Вопрос: <%= @question.body %></h3>
    <table class="table">
      <thead class="bg-primary text-light">
      <tr>
        <th scope="col">Ответы</th>
        <th colspan="2" class=" text-center">Действия</th>
      </tr>
      </thead>
      <tbody>
      <%= render @question.answers %>
      </tbody>
    </table>
    <% if @question.can_create_answer? %>
      <%= link_to 'Добавить ответ', new_admin_question_answer_path(@question), class: 'btn btn-sm btn-primary' %>
      <br>
      <br>
    <% end %>
    <div class="card-footer">
      <%= link_to 'Редактировать вопрос', edit_admin_question_path(@question), class: 'btn btn-sm btn-primary' %>
      <%= link_to 'К вопросам', admin_test_path(@question.test_id), class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>
</div>

