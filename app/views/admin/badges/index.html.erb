<div class="card">
  <div class="card-header">
    <div class="page-header">
      <h1><%= t 'activerecord.models.badge' %></h1>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>#</th>
        <th><%= t('activerecord.attributes.badge.name') %></th>
        <th><%= t('activerecord.attributes.badge.image_name') %></th>
        <th><%= t('activerecord.attributes.badge.rule_name') %></th>
        <th><%= t('activerecord.attributes.badge.rule_params') %></th>
        <th><%= t('helpers.table_col.created_at') %></th>
        <th colspan="3" class="text-center"><%= t('helpers.table_col.action') %></th>
      </tr>
      </thead>
      <tbody>
      <% @badges.each do |badge| %>
        <tr>
          <td><%= badge.id %></td>
          <td><%= badge.name %></td>
          <td><%= image_tag "#{badge.image_name}", height: "50" , class: 'mx-auto d-block' %></td>
          <td><%= badge.rule_name %></td>
          <td><%= badge.rule_params %></td>
          <td><%= l badge.created_at %></td>
          <td><%= link_to t('helpers.links.show'),
                          admin_badge_path(badge), :class => 'btn btn-success btn-sm' %></td>
          <td><%= link_to t('helpers.links.edit'),
                          edit_admin_badge_path(badge), :class => 'btn btn-warning btn-sm' %></td>
          <td> <%= link_to t('helpers.links.destroy'),
                           admin_badge_path(badge),
                           :method => :delete,
                           :data => { :confirm => t('helpers.confirm') },
                           :class => 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer">
    <%= link_to t('helpers.links.new', :default => t("helpers.links.new")),
                new_admin_badge_path,
                :class => 'btn btn-primary' %>
  </div>
</div>


