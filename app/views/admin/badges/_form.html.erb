<%= form_for @badge, :html => { :class => "form-horizontal badge" } do |f| %>
  <%= render 'shared/error', resource: @badge %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :image_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :image_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image_url) %>
  </div>
  <div class="form-group">
    <%= f.label :rule_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rule_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rule_name) %>
  </div>
  <div class="form-group">
    <%= f.label :rule_params, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rule_params, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rule_params) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_badges_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
