<div class="card">
  <div class="card-header">
    <h3>Тест: <%= @test.title %></h3>
  </div>
  <div class="card-body">
    <h4>Уровень: <%= @test.level %></h4>
    <h4>Категория: <%= @test.category.title %></h4>
    <%= link_to 'Edit  ', edit_admin_test_path(@test), class: 'btn btn-sm btn-warning' %>
    <%= link_to 'Destroy', admin_test_path(@test), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    <br>
    <br>
    <table class="table">
      <thead class="bg-primary text-light">
      <tr>
        <th scope="col">Вопросы</th>
        <th colspan="3" class=" text-center">Действия</th>
      </tr>
      </thead>
      <tbody>
      <%= render @questions %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to 'Новый вопрос', new_admin_test_path, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Назад', admin_tests_path, class: 'btn btn-sm btn-secondary' %>
  </div>
</div>
