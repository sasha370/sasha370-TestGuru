<%= form_with(model: [:admin, test], url: update_inline_admin_test_path(test),
              local: true,
              class: 'form-inline ',
              html: { style: 'display: none' },
              data: { test_id: test.id }) do |form| %>

  <div>
    <%= form.text_field :title, class: 'form-control mr-1' %>
  </div>

  <div>
    <%= form.submit t('.ok'), class: "actions btn btn-primary" %>
  </div>
<% end %>
